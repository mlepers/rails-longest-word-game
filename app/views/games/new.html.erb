<h1>Nouveau jeu</h1>

<div class="new-letters">
  <% @grid.each do |letter| %>
    <p id="letter"><%= letter %></p>
  <% end %>
</div>

<p>What is the longest word you can find? </p>

<form action="/score" method="post" id="form">
    <input type="text" name="word" type = "hidden" placeholder="Please enter your word.">
    <input type="text" name ="grid" type = "hidden" value="<%= @grid.join %>" style="display: none">
    <input type="submit" value="Play!" id="btn">
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
</form>

